<h3>Welcome</h3>

<h4>PartnerTrack helps you find great local consultants and turn them into great partners.</h4>

<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://lorempixel.com/1170/800/city/9">
      <div class="carousel-caption text-center">
        <h4><%= Visitor::IMAGE_LABELS[0] %></h4>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/7">
      <div class="carousel-caption text-center">
        <h4><%= Visitor::IMAGE_LABELS[1] %></h4>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/6">
      <div class="carousel-caption text-center">
        <h4><%= Visitor::IMAGE_LABELS[2] %></h4>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
<div class="text-center">
  <h5>How does your company use local partners?</h5>
  <p>Please take our quick survey before signing up...</p>
  <%= simple_form_for @visitor do |f| %>
    <%= f.error_notification %>
    <%= f.input :favorite, :collection => ['Generate leads', 'Close leads', 'After sales support'], label: false, as: :radio_buttons, :item_wrapper_class => 'inline' %>
    <%= f.input :comment, label: false, :placeholder => 'Add a comment...' %>
    <%= f.submit "Choose!", :class => "btn btn-primary"%>
  <% end %>
</div>